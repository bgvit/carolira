---
/**
 * Logo Component
 *
 * @description Logo description
 */

import { Icon } from 'astro-icon/components'
interface Props {
  /**
   * Whether to load the image eagerly or lazily
   * @default 'eager'
   */
  loading?: 'eager' | 'lazy'
}

const { loading = 'eager' }: Props = Astro.props
---

<div class="flex items-center gap-2 !no-underline">
  <a href="/" >
    <!--<Image src={logo} alt="Carol Lira Logo" width="47" height="37" loading={loading} />-->
